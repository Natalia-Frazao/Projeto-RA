    <button id="rain-sound-btn" onclick="toggleRainSound()">
      <span>Som de Chuva</span>
    </button>
    <button id="brown-noise-btn" onclick="toggleBrownNoise()">
      <span>Tocar Ru√≠do Marrom</span>
    </button>

    <script>
      let isRainPlaying = false;
      let isBrownNoisePlaying = false;
      const rainSound = document.getElementById('rain-sound');
      const brownNoise = document.getElementById('brown-noise');

      function toggleRainSound() {
        if (isRainPlaying) {
          rainSound.pause();
          rainSound.currentTime = 0;
        } else {
          rainSound.play();
        }
        isRainPlaying = !isRainPlaying;
      }

      function toggleBrownNoise() {
        if (isBrownNoisePlaying) {
          brownNoise.pause();
          brownNoise.currentTime = 0;
        } else {
          brownNoise.play();
        }
        isBrownNoisePlaying = !isBrownNoisePlaying;
      }
    </script>
